<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Users" table="users" schema="mydb">
        <id name="iduser">
            <column name="iduser" sql-type="int"/>
        </id>
        <property name="firstname">
            <column name="firstname" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="lastname">
            <column name="lastname" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>