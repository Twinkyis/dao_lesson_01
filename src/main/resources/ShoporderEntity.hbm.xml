<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Shoporder" table="shoporder" schema="mydb">
        <id name="idorder">
            <column name="idorder" sql-type="int"/>
        </id>
        <many-to-one name="productByIdproduct" class="entity.Product">
            <column name="idproduct"/>
        </many-to-one>
    </class>
</hibernate-mapping>